{
    "mcpServers": {
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest",
                "--output-dir=./mcp_data",
                "--save-trace",
                "--storage-state=./mcp_storage_state",
                "--user-data-dir=./mcp_data_dir"
            ],
            "transport": "stdio" 
        }       
    } 
}